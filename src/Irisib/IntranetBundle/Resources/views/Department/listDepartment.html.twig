{% extends '@IrisibIntranet/Default/template.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <h1>Gestion des départements</h1>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <table class="table table-responsive table-striped">
                    <thead>
                    <th>ID</th>
                    <th>Acronyme</th>
                    <th>Nom complet</th>
                    <th>Actions</th>
                    </thead>
                    <tbody>

                    {% for department in departments %}
                        <tr>
                            <td>{{ department.id }}</td>
                            <td>{{ department.shortname }}</td>
                            <td>{{ department.fullname }}</td>
                            <td>
                                <button type="button" class="btn btn-warning"><i class="fa fa-edit fa-fw"></i></button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#dep_del_{{ department.id }}"><i class="fa fa-remove fa-fw"></i></button>
                                {{ render(controller( 'IrisibIntranetBundle:Department:deleteForm', { 'id': department.id } )) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#dep_new"><i class="fa fa-plus-square fa-fw"></i> Nouveau département</button>
                {{ render(controller( 'IrisibIntranetBundle:Department:new', { } )) }}
            </div>
            <div class="col-sm-4">
                <p class="text-info text-justify">
                    <i class="fa fa-info-circle fa-5x pull-left "></i>{% include('IrisibIntranetBundle:Default:lorem.html.twig') %}
                </p>
            </div>
        </div>
    </div>

{% endblock %}