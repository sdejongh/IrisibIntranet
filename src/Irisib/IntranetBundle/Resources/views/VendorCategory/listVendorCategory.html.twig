{% extends '@IrisibIntranet/Default/template.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <h1>Gestion des catégories de fournisseurs</h1>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <table class="table table-responsive table-striped">
                    <thead>
                    <th>ID</th>
                    <th>Nom complet</th>
                    <th>Description</th>
                    <th>Actions</th>
                    </thead>
                    <tbody>

                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.fullname }}<br>
                                <small><span class="text-muted">{{ category.shortname }}</span></small>

                            </td>
                            <td>{{ category.description }}</td>
                            <td>
                                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#vendorcat_update_{{ category.id }}"><i class="fa fa-edit fa-fw"></i></button>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#vendorcat_del_{{ category.id }}"><i class="fa fa-remove fa-fw"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#vendorcat_new"><i class="fa fa-plus-square fa-fw"></i> Nouvelle catégorie</button>
            </div>
            <div class="col-sm-4">
                <p class="text-info text-justify">
                    <i class="fa fa-info-circle fa-5x pull-left "></i>{% include('IrisibIntranetBundle:Department:infoDepartment.html.twig') %}
                </p>
            </div>
        </div>
    </div>

{% endblock %}